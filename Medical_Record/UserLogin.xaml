<Window x:Class="Medical_Record.UserLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="350" Width="400" 
        Background="#F5EFF7" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Grid>
        <!-- Sombra suave ao redor do card -->
        <Border Background="Transparent" Margin="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="#40000000"/>
            </Border.Effect>

            <!-- Card principal -->
            <Border Background="White" CornerRadius="12" Padding="30">
                <StackPanel VerticalAlignment="Center">

                    <!-- Cabeçalho -->
                    <StackPanel Margin="0,0,0,20" HorizontalAlignment="Center">
                        <!-- Ícone de cérebro via PNG (substitua pela sua URL/local) -->
                        <Image Source="https://cdn-icons-png.flaticon.com/128/882/882998.png" 
                               Width="60" Height="60"
                               HorizontalAlignment="Center" Margin="0,0,0,15"/>

                        <TextBlock 
                                   FontSize="22" FontWeight="Bold"
                                   Foreground="#333" TextAlignment="Center"><Run Text="Bem-Vinda Dr"/><Run Language="pt-br" Text="a "/><Run Text="Beatriz"/></TextBlock>

                        <TextBlock Text="Seu espaço seguro para a prática de saúde mental."
                                   FontSize="14" Foreground="#666" 
                                   TextAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>

                    <!-- Botão de Login com Google -->
                    <Button Click="Submit_Click"
                            HorizontalAlignment="Center"
                            Height="45" Width="240" 
                            Margin="0,0,0,25"
                            Cursor="Hand">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <!-- Ícone do Google via PNG -->
                                <Image Source="https://uxwing.com/wp-content/themes/uxwing/download/brands-and-social-media/google-white-icon.png" 
                                       Width="20" Height="20" Margin="0,0,10,0"/>
                                <TextBlock Text="Entrar Com Google"
                                           FontSize="14" FontWeight="Bold"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#6b006b" 
                                        CornerRadius="6"
                                        BorderThickness="1"
                                        BorderBrush="#DDD">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Rodapé -->
                    <TextBlock Text="Todos os Direitos Reservados" 
                               FontSize="11" Foreground="#999" 
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </Border>

        <!-- Botão de fechar -->
        <Button Content="✕" 
                Width="25" Height="25" 
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="0,10,10,0" 
                Background="Transparent" BorderThickness="0"
                Foreground="#666" FontSize="12" FontWeight="Bold"
                Click="Close_Click"
                Cursor="Hand"/>
    </Grid>
</Window>